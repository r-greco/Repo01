<mvc:View controllerName="project1.controller.View2"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
    xmlns:f="sap.f"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:svm="sap.ui.comp.smartvariants">
	
	<f:DynamicPage backgroundDesign="Transparent" showFooter="true" headerPinned="true" >
			<f:title >
				<f:DynamicPageTitle >
					<f:heading>
						<Title text="ORDINE"/>
					</f:heading>
					
				</f:DynamicPageTitle>
			</f:title>
			<f:header >
				<f:DynamicPageHeader  backgroundDesign="Solid" >
					<f:content>
						
						<fb:FilterBar showFilterConfiguration="false" showGoOnFB="false" id="filterbar"  useToolbar="false" search=".onSearch" filterChange=".onFilterChange"  >
							<fb:filterGroupItems>
								<fb:FilterGroupItem name="Name"  groupName="Group1" visibleInFilterBar="true">
									<fb:control>
										
											<SearchField  id="Search" width="100%" search=".onFilterPost" liveChange=".onLivePost" />
				
										
									</fb:control>
									
								</fb:FilterGroupItem>
							</fb:filterGroupItems>
						</fb:FilterBar>
					</f:content>
				</f:DynamicPageHeader>
			</f:header>
			
			
		
     		
    
			

	<f:content>
	<Table id="Table"  
		inset="false"
		items="{getModel>/}"
		mode="MultiSelect">
		
		
		<infoToolbar>
			<OverflowToolbar>
			
            <ToolbarSpacer />
				
			
                <Button press="OnPage3" icon="sap-icon://add"/>  
                <Button id="showdel" icon="sap-icon://delete"  press="onDelete" />
			</OverflowToolbar>
		</infoToolbar>
		<columns >
			
			<Column
				width="12em" hAlign="Begin">
				
				<Text text="ID ORDINE" />
			</Column>
			<Column
                width="12em" hAlign="Center"
				>
				<Text text="TIPOLOGIA ORDINE" />
			</Column>
            	<Column width="12em" hAlign="Center"
				>
				<Text text="DATA ORDINE" />
			</Column>
			<Column
				width="12em" hAlign="Center"
				>
				<Text text="QUANTITA'" />
			</Column>
		</columns>
		<items>
			<ColumnListItem  type="Navigation" press="OnPage3" >
				<cells>
					
					<Text
						text="{getModel>id_ordine}"
						/>
					<Text
						text="{getModel>tipo}" />
					<Text
						text="{getModel>data_ordine}" />
                    <Text
						text="{getModel>quantita}" />
						
					
					
				</cells>
			</ColumnListItem>
		</items>
	</Table>
	</f:content>
   
</f:DynamicPage>   
</mvc:View>